<section>
  <div class="sectionImages flex">
    <img src="./images/image-1.png" alt="" class="w-full h-auto object-cover">
    <img src="./images/image-2.png" alt="" class="w-full h-auto object-cover">
    <img src="./images/image-3.png" alt="" class="w-full h-auto object-cover">
  </div>
  <div class="py-32 bg-dark">
    <h3 class="text-white text-5xl max-w-6xl mx-auto text-center">Ofrecemos soluciones integrales para maximizar tu inversi√≥n y generar <span class="text-brand">resultados reales</span></h3>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sectionImages = document.querySelector(".sectionImages");
    const imgs = sectionImages?.querySelectorAll("img");

    if(!sectionImages) return;

    const totalRatio = imgs ? Array.from(imgs).reduce((sum, img) => sum + img.naturalWidth / img.naturalHeight, 0) : 0;
    const height = sectionImages.clientWidth / totalRatio;

    imgs?.forEach(img => img.style.height = `${height}px`);
  });
</script>
